{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "wrangler deploy --dry-run",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "wrangler dev --port=3000",
		"start": "wrangler dev",
		"deploy": "wrangler deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings"
	},
	"dependencies": {
		"@hono/trpc-server": "^0.4.0",
		"@next-sendgrid-app/api": "workspace:*",
		"@next-sendgrid-app/db": "workspace:*",
		"@sendgrid/mail": "^8.1.6",
		"@trpc/server": "catalog:",
		"dotenv": "catalog:",
		"hono": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@types/node": "^22.13.11",
		"tsdown": "catalog:",
		"typescript": "catalog:",
		"wrangler": "^4.40.3"
	}
}
