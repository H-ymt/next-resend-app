{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "wrangler deploy --dry-run",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "wrangler dev --port=3000",
    "start": "wrangler dev",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "hono": "catalog:",
    "@trpc/server": "catalog:",
    "@hono/trpc-server": "^0.4.0",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@next-sendgrid-app/api": "workspace:*",
    "@next-sendgrid-app/db": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "tsdown": "catalog:",
    "wrangler": "^4.40.3",
    "@types/node": "^22.13.11"
  }
}
